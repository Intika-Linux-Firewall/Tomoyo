+ *
+ * This program converts policy for TOMOYO 2.4.x to C source.
+ */
+#include <stdio.h>
+
+int main(int argc, char *argv[])
+{
+	_Bool newline = 0;
+	int c;
+	if (argc != 2) {
+		fprintf(stderr, "%s name\n", argv[0]);
+		return 1;
+	}
+	printf("static char tomoyo_builtin_%s[] __initdata =\n", argv[1]);
+	putchar('"');
+	while ((c = fgetc(stdin)) != EOF) {
+		if (newline)
+			putchar('"');
+		newline = 0;
+		if (c == '\\') {
+			putchar('\\');
+			putchar('\\');
+		} else if (c == '"') {
+			putchar('\\');
+			putchar('"');
+		} else if (c == '\n') {
+			putchar('\\');
+			putchar('n');
+			putchar('"');
+			putchar('\n');
+			newline = 1;
+		} else {
+			putchar(c);
+		}
+	}
+	if (!newline)
+		putchar('"');
+	putchar(';');
+	putchar('\n');
+	return 0;
+}
