+$(obj)/tomoyo2c: $(obj)/tomoyo2c.c
+	@echo Compiling built-in policy generator for TOMOYO 2.4.x.
+	@$(HOSTCC) $(HOSTCFLAGS) -o $(obj)/tomoyo2c $(obj)/tomoyo2c.c
