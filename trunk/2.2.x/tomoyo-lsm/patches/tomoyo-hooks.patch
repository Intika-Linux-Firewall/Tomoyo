+		if (!override_cred)
+			return -ENOMEM;
+		((struct tomoyo_security *) override_cred->security)->domain
+			= ts->proposed_domain;
+		old_cred = override_creds(override_cred);
+	}
+	*/
+	error = tmy_check_open_permission(f->f_dentry, f->f_vfsmnt, flags);
+	/*
+	if (ts->proposed_domain) {
+		revert_creds(old_cred);
+		put_cred(override_cred);
